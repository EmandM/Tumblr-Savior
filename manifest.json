{
  "name": "Tumblr Savior",
  "version": "0.3.4",
  "description": "Tired of iPad posts filling up your dashboard? Hate hearing about an athlete's latest blunders? Tumblr Savior is here to save you!",
  "background_page"	: "index.html",
  "browser_action": {
    "default_icon": "Icon-16.png",
    "default_title": "Tumblr Savior"
  },
  "content_scripts": [ {
    "exclude_globs": [ "http://www.tumblr.com/messages", "http://assets.tumblr.com/*" ],
    "include_globs": [ "http://*.tumblr.com/*" ],
    "js": [ "includes/script.js" ],
    "matches": [ "http://*.tumblr.com/*", "https://*.tumblr.com/*" ]
  } ],
  "icons": { 
    "16": "Icon-16.png",
    "32": "Icon-32.png",
    "48": "Icon-48.png",
    "64": "Icon-64.png"
  },
  "options_page"	: "options.html",
  "permissions": [
    "contextMenus",
    "tabs",
    "http://*.tumblr.com/*"
  ]
}